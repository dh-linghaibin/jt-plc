<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dialog"
    android:orientation="vertical">

    <Button
        android:id="@+id/dialog_add_timer_enter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:padding="10dp"
        android:text="确定"
        android:textColor="@color/blue"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <com.jt28.a6735.jtzmconfig.adapter.check.PickerView
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/dialog_add_timer_list1"
            android:layout_width="0dp"
            android:layout_height="90dp" />
        <com.jt28.a6735.jtzmconfig.adapter.check.PickerView
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/dialog_add_timer_list2"
            android:layout_width="0dp"
            android:layout_height="90dp" />

        <com.jt28.a6735.jtzmconfig.adapter.check.PickerView
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/dialog_add_timer_list3"
            android:layout_width="0dp"
            android:layout_height="90dp" />

        <com.jt28.a6735.jtzmconfig.adapter.check.PickerView
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/dialog_add_timer_list4"
            android:layout_width="0dp"
            android:layout_height="90dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:drawableLeft="@drawable/ic_edit"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="设置时间备注"
        android:textColor="#666666"
        android:textSize="14sp"/>

    <EditText
        android:id="@+id/dialog_add_timer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:textColor="#666666"
        android:textSize="14sp"/>

</LinearLayout>