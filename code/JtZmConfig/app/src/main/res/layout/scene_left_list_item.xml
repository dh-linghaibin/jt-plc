<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center"
        android:id="@+id/scene_left_list_item_item"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:id="@+id/scene_left_list_item_addrss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:textSize="20dp"
                android:text="23"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/scene_left_list_item_Type"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原厂面板"/>
            <TextView
                android:layout_gravity="center"
                android:id="@+id/scene_left_list_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名字"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:text="按钮:  "/>
            <TextView
                android:gravity="center"
                android:id="@+id/scene_left_list_item_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:text="4"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:id="@+id/scene_left_list_item_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <Button
            android:id="@+id/scene_left_list_item_add"
            android:gravity="center"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorPrimary"
            android:text="添加"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/scene_left_list_item_sub"
            android:gravity="center"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/red"
            android:text="删除"
            android:textColor="@color/white"/>
    </LinearLayout>

</LinearLayout>
